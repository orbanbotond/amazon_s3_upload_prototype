<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Avatar:</strong>
  <%= @user.avatar %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<% if @user.image_processed? %>
  <%= link_to image_tag(@user.avatar_url(:thumb)), @user %>
<% else %>
  <em>Processing...</em>
<% end %>
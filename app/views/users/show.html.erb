<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Avatar url:</strong>
  <%= @user.avatar_url %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<% if @user.image_processed? %>
  <%= link_to image_tag(@user.image_url(:thumb)), @user %>
<% else %>
  <em>Processing...</em>
<% end %>